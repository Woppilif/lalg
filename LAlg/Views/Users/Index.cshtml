@model IEnumerable<BotAppData.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("CreatedAt", "Index", new { sortOrder = ViewBag.CreateSortParm })

                <!--@@Html.DisplayNameFor(model => model.CreatedAt)-->
            </th>
            <th>
                @Html.ActionLink("Group", "Index", new { sortOrder = ViewBag.GroupSortParm })

                <!--@@Html.DisplayNameFor(model => model.Group.Name)-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.ActionLink("Имя", "Index", new { sortOrder = ViewBag.FirstNameSortParm })

                <!--@@Html.DisplayNameFor(model => model.Firstname)-->
            </th>
            <th>
                @Html.ActionLink("Фамилия", "Index", new { sortOrder = ViewBag.LastNameSortParm })

                <!--@@Html.DisplayNameFor(model => model.Lastname)-->
            </th>
            <th>
                @Html.ActionLink("Телефон", "Index", new { sortOrder = ViewBag.PhoneSortParm })

                <!--@@Html.DisplayNameFor(model => model.Phone)-->
            </th>
            <th>
                @Html.ActionLink("Registered", "Index", new { sortOrder = ViewBag.RegSortParm })

                <!--@@Html.DisplayNameFor(model => model.Registered)-->
            </th>
            <th>
                @Html.ActionLink("Возраст", "Index", new { sortOrder = ViewBag.AgeSortParm })

                <!--@@Html.DisplayNameFor(model => model.Age)-->
            </th>
            <th>
                @Html.ActionLink("IsAdmin", "Index", new { sortOrder = ViewBag.IsAdminSortParm })

                <!--@@Html.DisplayNameFor(model => model.IsAdmin)-->
            </th>
            <th>
                @Html.ActionLink("IsTeacher", "Index", new { sortOrder = ViewBag.IsTeacherSortParm })

                <!--@@Html.DisplayNameFor(model => model.IsTeacher)-->
            </th>
            <th>
                @Html.ActionLink("Balance", "Index", new { sortOrder = ViewBag.BalanceSortParm })

                <!--@@Html.DisplayNameFor(model => model.Balance)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTeacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
