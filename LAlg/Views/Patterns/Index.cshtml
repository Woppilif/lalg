@model IEnumerable<BotAppData.Models.Pattern>

@{ ViewData["Title"] = "Паттерны"; }

<h1>Паттерны</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Поиск: @Html.TextBox("search")
        <input type="submit" value="search me" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Название паттерна", "Index", new { sortOrder = ViewBag.NameSortParm })
                <!--@@Html.DisplayNameFor(model => model.Name)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.PatternId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.PatternId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.PatternId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
