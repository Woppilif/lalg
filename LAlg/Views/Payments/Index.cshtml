@model IEnumerable<BotAppData.Models.Payment>

@{
    ViewData["Title"] = "Платежи";
}

<h1>Платежи</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Поиск: @Html.TextBox("search")
        <input type="submit" value="search me" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Имя", "Index", new { sortOrder = ViewBag.FirstNameSortParm })

                <!--@@Html.DisplayNameFor(model => model.Users)-->
            </th>
            <th>
                @Html.ActionLink("CreatedAt", "Index", new { sortOrder = ViewBag.CreatedAtSortParm })

                <!--@@Html.DisplayNameFor(model => model.CreatedAt)-->
            </th>
            <th>
                @Html.ActionLink("CapturedAt", "Index", new { sortOrder = ViewBag.CapturedAtSortParm })

                <!--@@Html.DisplayNameFor(model => model.CapturedAt)-->
            </th>
            <th>
                @Html.ActionLink("IsPayed", "Index", new { sortOrder = ViewBag.IsPayedSortParm })

                <!--@@Html.DisplayNameFor(model => model.IsPayed)-->
            </th>
            <th>
                @Html.ActionLink("Subscription", "Index", new { sortOrder = ViewBag.SubscriptionSortParm })

                <!--@@Html.DisplayNameFor(model => model.Subscription)-->
            </th>
            <th>
                @Html.ActionLink("Amount", "Index", new { sortOrder = ViewBag.AmountSortParm })

                <!--@@Html.DisplayNameFor(model => model.Amount)-->
            </th>
            <th>
                @Html.ActionLink("PaymentId", "Index", new { sortOrder = ViewBag.PaymentIdSortParm })

                <!--@@Html.DisplayNameFor(model => model.PaymentId)-->
            </th>
            <th>
                @Html.ActionLink("IsExtends", "Index", new { sortOrder = ViewBag.IsExtendsSortParm })

                <!--@@Html.DisplayNameFor(model => model.IsExtends)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor((modelItem) => item.Users.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapturedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subscription.SubscriptionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsExtends)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
