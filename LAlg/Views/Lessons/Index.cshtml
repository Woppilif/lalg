@model IEnumerable<BotAppData.Models.Lesson>

@{
    ViewData["Title"] = "Занятия";
}

<h1>Занятия</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Поиск: @Html.TextBox("search")
        <input type="submit" value="search me" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Group", "Index", new { sortOrder = ViewBag.GroupSortParm })
                <!--@@Html.DisplayNameFor(model => model.Group)-->
            </th>
            <th>
                @Html.ActionLink("Lesson", "Index", new { sortOrder = ViewBag.LessonSortParm })
                <!--@@Html.DisplayNameFor(model => model.LessonAt)-->
            </th>
            <th>
                @Html.ActionLink("Status", "Index", new { sortOrder = ViewBag.StatusSortParm })
                <!--@@Html.DisplayNameFor(model => model.Status)-->
            </th>
            <th>
                @Html.ActionLink("Url", "Index", new { sortOrder = ViewBag.UrlSortParm })
                <!--@@Html.DisplayNameFor(model => model.Url)-->
            </th>
            <th>
                @Html.ActionLink("Pattern", "Index", new { sortOrder = ViewBag.PatternSortParm })
                <!--@@Html.DisplayNameFor(model => model.Pattern)-->
            </th>
            <th>
                @Html.ActionLink("IsRepeats", "Index", new { sortOrder = ViewBag.IsRepeatsSortParm })
                <!--@@Html.DisplayNameFor(model => model.IsRepeats)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pattern.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRepeats)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LessonId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.LessonId">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.LessonId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
